.row.sidebar-row
  .panel.panel-default
    .panel-heading
      %h3.panel-title.text-center Summary
    .panel-body
      %ul.info-panel
        %li.header Taxable
        %li.amount{:id => 'taxable-income'}
          = number_to_currency(@totals.taxable_income)
        %li.header Value Added Tax
        %li.amount{:id => 'tax'}
          = number_to_currency(@totals.tax)
        %li.header Total
        %li.amount{:id => 'total'}
          = number_to_currency(@totals.total)
    .panel-heading
      %h3.panel-title.text-center Status
    .panel-body
      %ul.info-panel
        %li.center
          = status_helper(@invoice.status)
        %li.center
          = due_date_helper(@invoice)
