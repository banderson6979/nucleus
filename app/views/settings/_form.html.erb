<%= simple_form_for(@setting, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= @setting.key %>
    <%= f.input 'value' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
