<%= form_for @invoice, {:html => {}} do |f| %>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :job_order %>
        <%= select_tag "inbound_invoice[job_order_id]", options_from_collection_for_select(@job_orders, "id", "code", @invoice.job_order.id), :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :number %>
        <%= f.text_field :number, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :customer %>
        <%= f.text_field :customer, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.text_field :date, :class => 'isdate form-control' %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :total %>
        <%= f.text_field :total, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :tax %>
        <%= f.text_field :tax, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :taxable_income %>
        <%= f.text_field :taxable_income, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <a class="btn btn-info btn-block" id="save-form">
        <%= t('views.inbound_invoices.save') %>
      </a>
    </div>
  </div>
<% end %>
