<div class="panel panel-default">
  <div class="panel-heading dashboard-panel">
    <h3 class="panel-title">
      <form>
        <div class="col-lg-2">
          <div class="form-group">
            <%= select_month @filter_date, {add_month_numbers: false}, {name: 'month', :class => 'form-control'} %>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <%= select_year @filter_date, {add_month_numbers: false}, {name: 'year', :class => ' form-control'} %>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <a class="btn btn-info" id="dashboard-activities">
              <%= t('views.dashboard.job_orders.apply') %>
            </a>
          </div>
        </div>
      </form>
      <div class="pull-right">
        <ul class="nav nav-tabs dashboard-tabs">
          <li class="active">
            <a data-toggle="tab" href="#jobs-num">
              <i class="icon-table"></i>
            </a>
          </li>
        </ul>
      </div>
    </h3>
  </div>
  <div class="panel-body">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="act-jobs">
        <table class="table">
          <tr>
            <th>
              <%= t('views.dashboard.job_orders.job_orders_status') %>
            </th>
            <% @users.each do |u| %>
              <td class="right">
                <%= u.name %>
              </td>
            <% end %>
            <% @result.each do |a| %>
              <tr>
                <th>
                  <%= a["code"] %>
                </th>
                <% @users.each do |u| %>
                  <td class="right">
                    <%= a[u.name] %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
