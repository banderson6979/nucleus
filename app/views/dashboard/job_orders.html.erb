<div class="panel panel-default">
  <div class="panel-heading dashboard-panel">
    <h3 class="panel-title">
      <%= t('views.dashboard.job_orders_status.progress') %>
      <div class="pull-right">
        <ul class="nav nav-tabs dashboard-tabs">
          <li class="active">
            <a data-toggle="tab" href="#act-num">
              <i class="icon-table"></i>
            </a>
          </li>
          <li>
            <a data-toggle="tab" href="#act-chart">
              <i class="icon-bar-chart"></i>
            </a>
          </li>
        </ul>
      </div>
    </h3>
  </div>
  <div class="panel-body">
    <div class="tab-content">
      <div class="tab-pane fade in active" id="act-num">
        <table class="table">
          <% @job_orders.each do |j| %>
            <tr>
              <td>
                <%= j.code %>
              </td>
              <td>
                <span class="pull-right">
                  <%= "#{j.total_executed_hours}/#{j.total_estimated_hours}" %>
                  <div class="text-muted">
                    <span class="pull-right">
                      <%= "#{j.percent}%" %>
                    </span>
                  </div>
                </span>
              </td>
              <td style="width:400px">
                <div class="progress">
                  <div class="<%= job_order_status_helper(j) %> progress-bar" style="width:<%= j.percent %>%"></div>
                </div>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="tab-pane fade" id="act-chart">
        <img src="//charts.brace.io/bar.svg?_show_legend=false&_height=200px&_width=500px&amount=<%= @job_orders_chart %>"/>
      </div>
    </div>
  </div>
</div>
