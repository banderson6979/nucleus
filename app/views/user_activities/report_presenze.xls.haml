%table{:style=> 'border:#999 1px solid '}
	%tr
		%td{:colspan => 10}
			= "Presenze di #{@month}"
	%tr
		%td{:style=> 'border:#999 1px solid '}
			= @user_name
		%td{:style=> 'border:#999 1px solid '}
			data
		- @formatted_activities.each do |a|
			%td{:style=> 'border:#999 1px solid '}
				= a.date
	%tr
		%td
		%td{:style=> 'border:#999 1px solid '}
			Hours worked
		- @formatted_activities.each do |a|
			%td{:style=> 'border:#999 1px solid '}
				= a.working_hours
	%tr
		%td
		%td{:style=> 'border:#999 1px solid '}
			Vacation hours
		- @formatted_activities.each do |a|
			%td{:style=> 'border:#999 1px solid '}
				= a.holiday_hours
